{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "globalEnv": [
    "NODE_ENV",
    "NEXT_PUBLIC_API_BASE_URL",
    "NEXT_PUBLIC_APP_NAME",
    "NEXT_PUBLIC_ENABLE_DEVTOOLS"
  ],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [".next/**", "!.next/cache/**", "dist/**"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "typecheck": {
      "dependsOn": ["^typecheck"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "dev:extension": {
      "cache": false,
      "persistent": true
    },
    "build:extension": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"]
    }
  }
}
