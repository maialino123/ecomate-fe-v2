{
  "manifest_version": 3,
  "name": "Ecomate 1688 Extractor",
  "version": "0.1.0",
  "description": "Extract product data from 1688.com for Ecomate cost calculation",
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "downloads"
  ],
  "host_permissions": [
    "https://*.1688.com/*",
    "https://detail.1688.com/*"
  ],
  "action": {
    "default_popup": "src/popup/index.html",
    "default_title": "Ecomate 1688 Extractor"
  },
  "background": {
    "service_worker": "src/background/index.ts",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": [
        "https://*.1688.com/*",
        "https://detail.1688.com/*"
      ],
      "js": ["src/content/index.ts"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "16": "icons/icon-16.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  }
}
